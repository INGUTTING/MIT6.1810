{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug xv6",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/kernel", 
            "args": [],
            "cwd": "${workspaceFolder}",
            //"stopAtEntry": true,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/riscv64-unknown-elf-gdb", 
            "miDebuggerServerAddress": "localhost:1234",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set architecture to riscv64",
                    "text": "set architecture riscv:rv64",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "qemu xv6 (GDB wait)"
        }
    ]
}
